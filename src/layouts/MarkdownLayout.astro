---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout>
  <main class="max-w-4xl mx-auto px-6 py-8">
    <section class="mt-10">
      <h1 class="text-special text-4xl font-bold">{frontmatter.title}</h1>
      <a href={frontmatter.backlink} class="text-light-600 text-xl"
        >{frontmatter.subtitle}</a
      >
      <div class="w-full border-b border-neutral-700 mt-2"></div>
    </section>
    <article class="mt-20 prose prose-invert prose-lg max-w-none">
      <slot />
    </article>
  </main>
</Layout>

<style>
  .prose {
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      color: var(--color-yellow);
      font-weight: 600;
      margin-top: 2rem;
      margin-bottom: 1rem;
    }

    h1 {
      font-size: 2.5rem;
      border-bottom: 2px solid var(--color-accent);
      padding-bottom: 0.5rem;
    }

    h2 {
      font-size: 2rem;
    }

    h3 {
      font-size: 1.5rem;
    }

    p {
      font-weight: 400;
      font-size: 1.2rem;
      line-height: 1.7;
      margin-bottom: 1.5rem;
      color: var(--color-light);
    }

    a {
      color: var(--color-special);
      text-decoration: none;
      border-bottom: 1px solid transparent;
      transition: border-color 0.2s ease;
    }

    a:hover {
      border-bottom-color: var(--color-special);
    }

    /* Code */
    code {
      background-color: rgba(254, 128, 25, 0.1);
      color: var(--color-special);
      padding: 0.2rem 0.4rem;
      border-radius: 0.25rem;
      font-size: 0.875em;
    }

    pre {
      background-color: #282828;
      border-radius: 0.5rem;
      padding: 1rem;
      overflow-x: auto;
      margin: 1.5rem 0;
    }

    pre code {
      background-color: transparent;
      padding: 0;
      color: var(--color-light);
    }

    /* Blockquotes */
    blockquote {
      border-left: 4px solid var(--color-accent);
      padding-left: 1rem;
      margin: 1.5rem 0;
      font-style: italic;
      color: #d5c4a1;
    }

    /* Lists */
    ul,
    ol {
      margin: 1rem 0;
      padding-left: 2rem;
    }

    li {
      margin-bottom: 0.5rem;
      line-height: 1.6;
    }

    /* Tables */
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 1.5rem 0;
    }

    th,
    td {
      border: 1px solid #504945;
      padding: 0.75rem;
      text-align: left;
    }

    th {
      background-color: var(--color-accent);
      color: var(--color-light);
      font-weight: 600;
    }

    /* Horizontal rule */
    hr {
      border: none;
      height: 2px;
      background: linear-gradient(
        to right,
        transparent,
        var(--color-accent),
        transparent
      );
      margin: 2rem 0;
    }
  }
</style>
